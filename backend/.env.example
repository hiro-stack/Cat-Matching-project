# =====================================
# Django Settings
# =====================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=your-app-name.herokuapp.com,api.example.com

# Heroku App Name (optional - for auto ALLOWED_HOSTS)
HEROKU_APP_NAME=your-app-name

# =====================================
# Database (Heroku Postgres)
# =====================================
# Heroku automatically provides DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/dbname

# =====================================
# Frontend URL for CORS
# =====================================
FRONTEND_URL=https://your-app.vercel.app

# =====================================
# Cloudflare R2 Storage (S3-compatible)
# =====================================
USE_R2_STORAGE=True
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT_URL=https://<account_id>.r2.cloudflarestorage.com

# Optional: Custom domain for public access
# R2_PUBLIC_DOMAIN=media.example.com

# =====================================
# Email Settings (optional)
# =====================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =====================================
# Development Settings (local only)
# =====================================
# For local development with docker-compose
# DB_NAME=cat_matching
# DB_USER=catuser
# DB_PASSWORD=catpassword
# DB_HOST=db
# DB_PORT=3306
